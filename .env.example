# ===========================================
# SOCIAL FORGE - ENVIRONMENT VARIABLES
# ===========================================

# -----------------
# APPLICATION
# -----------------
APP_NAME=socialforge
APP_ENV=development
APP_DEBUG=true
APP_PORT=8080
APP_URL=http://localhost:8080

# -----------------
# DATABASE
# -----------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=example_user
DB_PASSWORD=your-strong-password-change-in-production
DB_NAME=example_db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# -----------------
# REDIS
# -----------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-redis-password-change-in-production
REDIS_DB=0
REDIS_INSTANCE=default
REDIS_POOL_SIZE=10

# -----------------
# CENTRIFUGO (WebSocket)
# -----------------
CENTRIFUGO_URL=http://localhost:8000
CENTRIFUGO_PORT=8000
CENTRIFUGO_API_KEY=your-api-key-change-in-production
CENTRIFUGO_TOKEN_SECRET=your-secret-token-key-change-in-production
CENTRIFUGO_ADMIN_PASSWORD=admin123
CENTRIFUGO_ADMIN_SECRET=admin-secret-change-in-production

# -----------------
# JWT
# -----------------
JWT_SECRET=your-jwt-secret-key-change-in-production-min-32-chars
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_HOURS=168

# -----------------
# MINIO (Object Storage)
# -----------------
MINIO_ENDPOINT=localhost:9000
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=example_user
MINIO_ROOT_PASSWORD=your-strong-minio-password-change-in-production
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=example_bucket
MINIO_PUBLIC_URL=http://localhost:9000

# -----------------
# ASYNQ (Task Queue)
# -----------------
ASYNQ_REDIS_ADDR=localhost:6379
ASYNQ_REDIS_PASSWORD=your-strong-redis-password-change-in-production
ASYNQ_CONCURRENCY=10
ASYNQ_DB=1
# -----------------
# WHATSAPP (WhatsApp Multi-Device)
# -----------------
WHATSAPP_DB_PATH=./storage/whatsapp
WHATSAPP_LOG_LEVEL=INFO

# -----------------
# META (Facebook APIs)
# -----------------
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token-change-in-production
META_GRAPH_API_VERSION=v18.0

# -----------------
# TELEGRAM
# -----------------
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
# -----------------
# AI (OpenAI / Anthropic)
# -----------------
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
GEMINI_API_KEY=your-gemini-api-key
GEMINI_PROJECT_ID=your-gemini-project-id
# -----------------
# EMAIL (SMTP)
# -----------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Example Company
SMTP_FROM_ADDRESS=noreply@example.com

# -----------------
# RATE LIMITING
# -----------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60

# -----------------
# CORS
# -----------------
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization

# -----------------
# MONITORING
# -----------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-strong-grafana-password-change-in-production
GRAFANA_ROOT_URL=http://localhost:3001
GRAFANA_PLUGINS=

# -----------------
# CLIENT
# -----------------
CLIENT_PORT=5173
CLIENT_ORIGIN=http://localhost:5173
PUBLIC_API_URL=http://localhost:8080
PUBLIC_CENTRIFUGO_URL=ws://localhost:8000/connection/websocket

# -----------------
# NGINX
# -----------------
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# -----------------
# LOGGING
# -----------------
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log

# -----------------
# FILE UPLOAD
# -----------------
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,mp4,mp3

# -----------------
# SECURITY
# -----------------
BCRYPT_COST=10
ENCRYPTION_KEY=your-32-character-encryption-key

# -----------------
# PAGINATION
# -----------------
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# -----------------
# TENANT LIMITS
# -----------------
MAX_DIVISIONS_PER_TENANT=50
MAX_AGENTS_PER_TENANT=100
MAX_QUICK_REPLIES_PER_TENANT=1000
MAX_LANDING_PAGES_PER_TENANT=20
MAX_WHATSAPP_INTEGRATIONS=1
MAX_META_INTEGRATIONS=10
MAX_TELEGRAM_INTEGRATIONS=10
MAX_WEBCHAT_INTEGRATIONS=10
MAX_LINKCHAT_INTEGRATIONS=10

# -----------------
# SESSION
# -----------------
SESSION_LIFETIME=86400
SESSION_COOKIE_NAME=socialforge_session
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# -----------------
# WEBHOOK
# -----------------
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5

# -----------------
# CACHE
# -----------------
CACHE_TTL=3600
CACHE_PREFIX=sf:

# -----------------
# TIMEZONE
# -----------------
TZ=Asia/Jakarta

# -----------------
# DEVELOPMENT TOOLS
# -----------------
AIR_ENABLED=true
SWAGGER_ENABLED=true
DEBUG_MODE=true

# -----------------
# PRODUCTION ONLY
# -----------------
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key
